generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String? @unique
  email String @unique
  image String?
  hashedPassword String?
  
  resetPasswordToken String?
  resetPasswordExpires DateTime?
  isVerified Boolean? @default(false)
  verifyToken String?
  verifyTokenExpires DateTime?
}


model Project {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  description String?
  technologies String?
  technologiesArray String[]
  link String?
  date String?
  category String?
  imageUrls String[]
  youtubeLink String?
}


model ContactMessages {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName String
  lastName String?
  email String
  phoneNumber String
  service String
  message String
}
